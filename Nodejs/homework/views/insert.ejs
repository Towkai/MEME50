<html>
    <head>
        <link rel="stylesheet" type="text/css" href="/public/css/style.css"></head>
    </head>
    <body>
        <form method="post" action="http://localhost:8181/nodejs_homework/insert">
            <table>
                <thead>
                    <%= caption %>
                </thead>
                <tr>
                    <label>
                        <td><%= text.empno %>：</td>
                        <td><input class="input_field" type="<%= input_type.empno %>" name="empno" value="<%= employ_value.empno %>" /></td>
                    </label>
                </tr>
                <tr>
                    <label>
                        <td><%= text.ename %>：</td>
                        <td><input class="input_field" type="<%= input_type.ename %>" name="ename" value="<%= employ_value.ename %>" /></td>
                    </label>
                </tr>
                <tr>
                    <label>
                        <td><%= text.hiredate %>：</td>
                        <td><input class="input_field" type="<%= input_type.hiredate %>" name="hiredate" value="<%= employ_value.hiredate %>" /></td>
                    </label>
                </tr>
                <tr>
                    <label>
                        <td><%= text.salary %>：</td>
                        <td><input class="input_field" type="<%= input_type.salary %>" name="salary" value="<%= employ_value.salary %>" /></td>
                    </label>
                </tr>
                <tr>
                    <label>
                        <td><%= text.deptno %>：</td>
                        <td><input class="input_field" type="<%= input_type.deptno %>" name="deptno" value="<%= employ_value.deptno %>" /></td>
                    </label>
                </tr>
                <tr>
                    <label>
                        <td><%= text.title %>：</td>
                        <td><input class="input_field" type="<%= input_type.title %>" name="title" value="<%= employ_value.title %>" /></td>
                    </label>
                </tr>
            </table>
            <input type="submit" />
        </form>
    </body>
</html>